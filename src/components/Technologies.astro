---
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import React from "./icons/React.astro";
import Next from "./icons/Next.astro";
import Node from "./icons/Node.astro";
import Sass from "./icons/Sass.astro";
import JS from "./icons/JS.astro";
import Express from "./icons/Express.astro";
import Mongo from "./icons/Mongo.astro";
import Threejs from "./icons/Threejs.astro";
import Docker from "./icons/Docker.astro";
import Python from "./icons/Python.astro";
import Java from "./icons/Java.astro";
import Spring from "./icons/Spring.astro";
import Tailwind from "./icons/Tailwind.astro";
import Angular from "./icons/Angular.astro";
import Postgres from "./icons/Postgres.astro";
---

<section id="technologies">
  <h2>Technologies</h2>
  <div class="techList">
    <HTML size="3em"/>
    <CSS size="3em"/>
    <Tailwind size="3em"/>
    <Sass size="3em"/>
    <JS size="3em"/>
    <Angular size="3em"/>
    <React size="3em"/>
    <Next size="3em"/>
    <Threejs size="3em"/>
    <Node size="3em"/> 
    <Express size="3em"/>
    <Python size="3em"/>
    <Java size="3em"/>
    <Spring size="3em"/>
    <Postgres size="3em"/>
    <Mongo size="3em"/>
    <Docker size="3em"/>

  </div>
</section>

<style>
#technologies {
  background-color: var(--accent-gray);
  margin-top: 2em;
  padding: 30px 0;
  text-align: center;
  color: white;
}
.techList{
  width: 80%;
  margin: 0 auto;
  display:grid;
  grid-template-columns: repeat(auto-fill, minmax(100px, 2fr));
  grid-gap: 50px;
  justify-content: center;
}

.techList > * {
  transition: transform 0.3s ease-in-out; /* Smooth transition */
}

.techList > *:hover {
  transform: scale(1.5); /* Scale the element 1.5 times on hover */
}
</style>
